title SearchNTalk - Mobile Verification
include ../header
.matter
    .container
        .row
            .col-md-12.col-lg-12.col-xs-12.col-sm-12.content
                .card
                    include ../errorMessage
                    .alert.alert-success
                        strong Expert account successfully created!
                        p Just one more step! We need to verify your mobile number
                        em.small This number will be used to connect the users to you for calls that you accept to receive
                    form#sendCode(action=ApiUrlDelegate.mobileVerificationCode(), method='post')
                        .item-edit
                            .item
                                .row
                                    h3 Mobile Number
                                    .form-group
                                        .input-group
                                            .input-group-btn
                                                select.btn(style="width: 150px", name="country_code")
                                                    for name,abb in CountryName
                                                        -var code = CountryCode[abb];
                                                        option(value=code)= name + ' (+' + code + ')'
                                            .input-group-btn
                                                input.form-control(style="width: 100px", type='text', placeholder='Area Code', name="area_code")
                                            input.form-control.phone-number(type='text', placeholder='Phone Number', name="phone")
                                    .links-editing
                                        .edit-schedules
                                            input.btn.btn-primary.form-control(type='submit', value='Send verification code', name='sendCode')
                    form#verifyCode(style='display: none;', action=ApiUrlDelegate.mobileVerificationCode(), method='get')
                        .item-edit
                            .item
                                .row
                                    h3 Verification code
                                    .form-group
                                        input(type='text', name='text').form-control#verificationCode
                                    .links-editing
                                        .edit-schedules
                                            input.btn.btn-primary.form-control(type='submit', value='Verify', name='verify')
include ../timezoneCountryMap
script(src='/js/app/dashboard/mobileVerification.js')
include ../footer