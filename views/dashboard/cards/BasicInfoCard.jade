.card
    .item
        .header-row.row
            h5.col-xs-4 Basic Info
            .header-link.col-xs-8
                if isEditable
                    a.btn.btn-primary#editUserProfileBtn(data-id=userProfile.id)
                        i.icon-pencil
                    | &nbsp;
        .user-profile
            .avatar
                .shadow
                .initials-profile-image-large= getNameInitials(user.first_name, user.last_name)
                img(src=ApiUrlDelegate.userProfilePicture(user.id) + '?imageSize=200')
            .info
                .info-upper
                    .user-displayname= formatName(user.first_name, user.last_name, user.title)
                    if user.date_of_birth
                        .user-age= moment(parseInt(user.date_of_birth)).fromNow(true)
                .info-lower
                    .user-locale New Delhi
                    .user-timezone
                        each zone in Timezone
                            if zone.zone_id == user.timezone
                                | #{formatTimezone(zone.gmt_offset)}
            .clearer
            if isEditable
                a.btn.btn-success.btn-xs#selectFileBtn Upload
                form#fileUploadForm(action=ApiUrlDelegate.userProfilePicture(user.id), method="post", enctype="multipart/form-data")
                    input#selectFile(type='file', name='profile', style='display: none')
                    input#selectFileSubmit(type='submit', style='display: none')
            .profile
                p= userProfile.short_desc
    .item
        .row
            .meta.meta-keywords
                h5.col-xs-12 Skills/Keywords
                .clearer
                ul
                    if userSkill.length != 0
                            each skill in userSkill
                                li #{skill.skill_name}&nbsp
                                    if isEditable
                                        a(data-id=skill.id, name = 'deleteUserSkill')
                                            i.icon-cancel
                    if isEditable
                        li Add Skill&nbsp;
                            a#addSkillBtn
                                i.icon-plus
