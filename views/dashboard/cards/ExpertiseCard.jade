for expertise in userExpertise
    .card.main-card
        .item
            .row
                h5.col-xs-8= expertise.title
                if isEditable
                    .header-link.col-xs-4
                        a.btn.btn-primary(data-id=expertise.id).editExpertiseBtn
                            i.icon-pencil
            .session-and-ratings
                if expertise.session_duration
                    .badge.badge-session.session-info
                        h2 Session
                        h1
                            | #{formatMoney(expertise.session_price, expertise.session_price_unit)}
                            | &nbsp;for&nbsp;
                            | #{expertise.session_duration}
                            | &nbsp;mins
                .clearer
            .meta.meta-keywords
                h5 Skills/Keywords
                if expertise.skill && expertise.skill.length != 0
                    ul
                        for skill in expertise.skill
                            li #{skill.skill.skill}
                else
                    div No skills added
            if expertise.description
                .summary-and-description
                    p= expertise.description
            if expertise.years_of_experience
                .meta.meta-keywords
                    h5 Experience
                    h1= expertise.years_of_experience
if isEditable
    .card.edit-card
        form
            .item
                .item-edit
                    .row
                        .inputs.col-xs-8
                            .input-group
                                input.form-control(type='text', placeholder='Expertise Title', name='title')
                        .header-link.col-xs-4
                            a.btn.btn-danger.cancelEditCardBtn
                                i.icon-trash
                    div
                        div#sessionToggle
                            h3 Session:
                            .btn-group(data-toggle='buttons')
                                label.btn.btn-radio.active
                                    input(type='radio', name='session_toggle', value='1')
                                    | Yes
                                label.btn.btn-radio
                                    input(type='radio', name='session_toggle', value='0')
                                    | No
                        div#pricing
                            h3 Pricing:
                            .form-group
                                .row
                                    .col-md-2
                                        input.form-control(type='text', name='session_price', placeholder='0 = Free')
                                    .col-md-2
                                        select.form-control(name='session_price_unit')
                                            option(value='1') Rs.
                                            option(value='2') $
                                            option(value='3') Points
                                    .col-md-1 for
                                    .col-md-3
                                        .input-group
                                            input.form-control(type='text', name='session_duration', placeholder='Session length')
                                            .input-group-addon
                                                span mins.
                        .clearer
                        h3 Skills/Keywords:
                        .form-group
                            input.form-control(id='tokeninput', class='tokeninput', type='text', name='skill_name', autocomplete="off")
                        h3 Description:
                        .form-group
                            textarea.form-control(name='description', rows='4')
                        h3 Years of experience:
                        .form-group
                            input.form-control(name='years_of_experience', type='text')
            .links-edit
                p
                    | Editing Expertise
                    input(type='hidden', name='id')
                    input.btn.btn-primary.done-editing-schedules(type='submit', value='Save')
                    button.btn.btn-danger.done-editing-schedules.deleteExpertiseBtn Delete